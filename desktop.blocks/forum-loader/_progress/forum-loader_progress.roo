.forum-loader
{
    transition: background-color .3s ease-in;

    &_progress
    {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: auto;
    }

    &_progress
    {
        background-color: rgba(255,255,255, 0.8);
        z-index: 999;

        .spin
        {
            position: absolute;
            top: 150px;
            right: 0;
            bottom: 0;
            left: 0;
            margin: 0 auto;
        }
    }
}
