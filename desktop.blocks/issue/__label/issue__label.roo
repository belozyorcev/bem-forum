.issue__label
{
    font-size: 12px;

    display: inline-block;
    vertical-align: middle;
    margin-right: 10px;
    margin-bottom: 5px;
    padding: 0 5px;

    border: 1px solid;
    border-radius: 3px;
    opacity: .8;

    &:hover
    {
        opacity: 1;
        text-decoration: none;
    }
}
