.issue__line
{
    &_gap
    {
        margin-bottom: 10px;
    }

    &_top
    {
        font-size: 12px;

        padding-bottom: 10px;

        border-bottom: 1px solid;
    }

    &_subtop
    {
        align-items: center;
    }

    &_bottom
    {
        padding-top: 10px;

        border-top: 1px solid;
    }

    &_bottom,
    &_top
    {
        border-color: $border-color;
    }

    &_body,
    &_bottom
    {
        padding-left: 80px;
    }
}
