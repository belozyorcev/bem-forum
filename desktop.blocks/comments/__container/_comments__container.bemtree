block('comments').elem('container')(
    content()(function() {
        var comments = this._forum.comments || this.ctx.data,
            issueNumber = this._forum.issue.number || this.ctx.issueNumber;

        return comments.map(function(comment) {
            return {
                block: 'comment',
                comment: comment,
                js: {
                    issueNumber: issueNumber,
                    id: comment.id
                }
            }
        });
    })
);
