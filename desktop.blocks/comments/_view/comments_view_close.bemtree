block('comments').mod('view', 'close')(
    content()(function() {
        var comments = this.ctx.data,
            issueNumber = this.ctx.issueNumber;

        return comments.map(function(comment) {
            return {
                block: 'comment',
                comment: comment,
                js: {
                    issueNumber: issueNumber,
                    id: comment.id
                }
            }
        });
    })
);
