.text
{
    line-height: 1.5;

    p
    {
        margin-top: 0;
    }

    blockquote
    {
        margin: 0;
        padding-left: 20px;

        border-left: 10px solid $border-color;
    }

    hr
    {
        height: 4px;
        margin: 15px 0;
        padding: 0;

        color: #ccc;
        border: 0 none;
        background: url(data:image/png;base64,) repeat-x 0 0;
    }
}
