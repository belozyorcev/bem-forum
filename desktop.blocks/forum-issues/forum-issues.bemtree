block('forum-issues')(
    match(function() { return this.ctx.data; }).content()(function() {

        return this.ctx.data.map(function(issue) {
            var labelsName = [];

            issue.labels.forEach(function(label) {
                labelsName.push(label.name);
            });

            return {
                block: 'issue',
                issue: issue,
                js: {
                    number: issue.number,
                    labels: labelsName,
                    forumUrl: req.forumUrl
                }
            }
        });
    })
);
