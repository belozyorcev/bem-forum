$opacity = .7;

.icon_action
{
    &_remove
    {
        background: url('icon_action_remove.svg') no-repeat;
    }

    &_edit
    {
        background: url('icon_action_edit.svg') no-repeat;
    }

    &_solve
    {
        background: url('icon_action_solve.svg') no-repeat;
        opacity: $opacity;
    }

    &_un-solve
    {
        background: url('icon_action_un-solve.svg') no-repeat;
        opacity: $opacity;
    }
}
